div.grid
  span(ng-show="location.path() == '/crouton/home'")
    crouton-basic-card(snippet-name='homeBanner').grid__col.grid__col--12-of-12.banner
    crouton-basic-card(snippet-name='home').grid__col.grid__col--12-of-12

  span(ng-show="location.path() == '/crouton/gettingStarted'")
    crouton-basic-card(snippet-name='gettingStarted').grid__col.grid__col--12-of-12

  span(ng-show="location.path() == '/crouton/features'")
    crouton-basic-card(snippet-name='features').grid__col.grid__col--12-of-12

  span(ng-show="location.path() == '/crouton/demo'")
    crouton-basic-card(snippet-name='demo', ng-class="{'grid__col--centered': nav.desktop}").grid__col.grid__col--6-of-12

  span(ng-show="location.path() == '/crouton/about'")
    crouton-basic-card(snippet-name='about').grid__col.grid__col--12-of-12

  span(ng-show="location.path() == '/crouton/documentation'")
    crouton-basic-card(snippet-name='documentation').grid__col.grid__col--12-of-12

  span(ng-if="location.path() == '/crouton/404'")
    crouton-basic-card(snippet-name='404').grid__col.grid__col--12-of-12
